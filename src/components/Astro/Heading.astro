---
/* Component for rendering consistent page headings with optional background.
 *
 * Props:
 * - text: string - Heading text content
 * - showHeadingBackground?: boolean - Enable background styling
 * - class?: string - Additional CSS classes
 *
 * Example usage:
 * <Heading
 *   text="Our Services"
 *   showHeadingBackground={true}
 *   class="my-heading"
 * />
 *
 * Notes:
 * - Centers text with responsive margins
 * - Optional background styling
 * - Capitalizes text by default
 * - Theme-based colors
 * - Responsive padding
 */

interface Props {
  // Text content of the heading //
  text: string;
  // Controls whether heading has background styling //
  showHeadingBackground?: boolean;
  // Optional CSS classes //
  class?: string | undefined;
}

const { text, showHeadingBackground = true, class: className } = Astro.props;
---

<div class:list={["mt-12 mb-10 flex md:mt-24 md:mb-12", className]}>
  <p
    class:list={[
      "mx-auto text-4xl leading-relaxed font-medium tracking-widest capitalize",
      {
        "bg-theme-secondary text-theme-secondary inline-block p-4 leading-none": showHeadingBackground,
        "w-full": !showHeadingBackground,
      },
      { "rounded-theme": true },
    ]}
  >
    {text}
  </p>
</div>
